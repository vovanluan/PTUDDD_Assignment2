<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle">
    <ImageView
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="@dimen/course_image"
        android:src="@drawable/card"
        android:paddingBottom="@dimen/rectangle_margin"
        android:paddingLeft="@dimen/rectangle_margin"
        android:paddingRight="@dimen/rectangle_margin"
        android:paddingTop="@dimen/rectangle_margin" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray"
        android:layout_marginBottom="2dp"/>
   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <de.hdodenhof.circleimageview.CircleImageView
           xmlns:app="http://schemas.android.com/apk/res-auto"
           android:id="@+id/profile_image"
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:src="@drawable/user_ava_1"
           app:border_color="#FF000000"
           android:layout_margin="@dimen/avatar_margin"
           android:layout_alignParentLeft="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/profile_image"
            android:layout_alignBottom="@+id/profile_image">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                style="@style/Title"
                android:text="ABC"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="by "
                    style="@style/Creator"
                    android:id="@+id/by"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/creator"
                    style="@style/Creator"
                    android:text="abc"
                    android:layout_toRightOf="@+id/by"/>
            </RelativeLayout>


        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/info_top_margin">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star"
            android:id="@+id/starImg"
            android:layout_marginLeft="10dp"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            />
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/star"
            android:textColor="@color/gray"
            android:text="0"
            android:layout_toEndOf="@+id/starImg"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_like"
            android:layout_marginLeft="-30dp"
            android:layout_centerInParent="true"
            android:id="@+id/likeImg"
            />
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/upvotes"
            android:textColor="@color/gray"
            android:layout_toEndOf="@+id/likeImg"
            android:text="3"
            android:layout_centerInParent="true"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_big_group"
            android:layout_marginLeft="10dp"
            android:id="@+id/peopleImg"
            android:layout_toLeftOf="@+id/people"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:id="@+id/people"
            android:text="10"
            android:textColor="@color/gray"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/description_height"
        android:id="@+id/description"
        style="@style/Description"
        android:text="AFJHAFJKAFJAHFJH"/>
</LinearLayout>