<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle">
    <ImageView
        android:id="@+id/courseImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/course_image"
        android:src="@drawable/card"
        android:paddingBottom="@dimen/rectangle_margin"
        android:paddingLeft="@dimen/rectangle_margin"
        android:paddingRight="@dimen/rectangle_margin"
        android:paddingTop="@dimen/rectangle_margin" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_marginBottom="2dp"/>
   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <de.hdodenhof.circleimageview.CircleImageView
           xmlns:app="http://schemas.android.com/apk/res-auto"
           android:id="@+id/profile_image"
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:src="@drawable/profile"
           app:border_color="#FF000000"
           android:layout_margin="@dimen/avatar_margin"
           android:layout_alignParentLeft="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/profile_image"
            android:layout_alignBottom="@+id/profile_image">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                style="@style/Title"
                android:text="ABC"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="by "
                    style="@style/Creator"
                    android:id="@+id/by"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/creator"
                    style="@style/Creator"
                    android:text="abc"
                    android:layout_toRightOf="@+id/by"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/info_top_margin">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:src="@drawable/ic_star"
                    android:layout_marginRight="4dp"
                    />
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:id="@+id/star"
                    android:textColor="@color/gray"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:src="@drawable/ic_group"
                    android:layout_marginRight="4dp"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:id="@+id/people"
                    android:text="10"
                    android:textColor="@color/gray"/>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/description_height"
        android:id="@+id/description"
        style="@style/Description"
        android:text="AFJHAFJKAFJAHFJH"/>
</LinearLayout>