<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.luan.activity">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">
        <activity
            android:name="com.example.luan.activity.SplashActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.luan.activity.LoginActivity" />
        <activity android:name="com.example.luan.activity.HomeActivity" />
        <activity android:name="com.example.luan.activity.RegisterActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".CourseActivity" />
        <activity android:name=".CreateCourseActivity" />
        <activity android:name=".AboutUsActivity" />
        <activity android:name="com.example.luan.activity.InformationActivity"
            android:parentActivityName=".HomeActivity"/>
        <activity
            android:name=".SettingsActivity"
            android:label="Preferences">
        </activity>
    </application>

</manifest>
